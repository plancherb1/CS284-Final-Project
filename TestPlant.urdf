<?xml version="1.0"?>

<robot xmlns="http://drake.mit.edu"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://drake.mit.edu ../../doc/drakeURDF.xsd" name="PlanarManipulator">

  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size=".2 .2 .2" />
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1" />
      </material>
    </visual>
    <collision group="base_link_c">
      <origin xyz="0 0 2.2" rpy="0 0 0" />
      <geometry>
        <box size=".2 .2 .2" />
      </geometry>
    </collision>
  </link>

  <link name="upper_arm">
    <inertial>
      <origin xyz="0 0 -.5" rpy="0 0 0" />
      <mass value="1" />
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1" />
    </inertial>
    <visual>
      <origin xyz="0 0 -.5" rpy="0 0 0" />
      <geometry>
         <cylinder length="1.1" radius=".05" />
      </geometry>
      <material name="red">
	    <color rgba="1 0 0 1" />
      </material>
    </visual>
    <collision group="upper_arm_c">
      <origin xyz="0 0 -.5" rpy="0 0 0"/>
      <geometry>
        <capsule length="1.1" radius=".05" />
      </geometry>
    </collision>
  </link>

  <link name="lower_arm">
    <inertial>
      <origin xyz="0 0 -0.5" rpy="0 0 0" />
      <mass value="1" />
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1" />
    </inertial>
    <visual>
      <origin xyz="0 0 -0.5" rpy="0 0 0" />
      <geometry>
         <cylinder length="1.1" radius=".05" />
      </geometry>
      <material name="blue">
	    <color rgba="0 0 1 1" />
      </material>
    </visual>
    <collision group="lower_arm_c">
      <origin xyz="0 0 -.5" rpy="0 0 0"/>
      <geometry>
        <capsule length="1.1" radius=".05" />
      </geometry>
    </collision>
  </link>

  <link name="hand">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="0.5" />
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
         <box size="0.5 0 0.1"/>
      </geometry>
      <material name="green">
	    <color rgba="0 1 0 1" />
      </material>
    </visual>
    <collision group="hand_c">
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
         <box size="0.5 0 0.1"/>
      </geometry>
    </collision>
  </link>
 
  <joint name="shoulder" type="revolute">
    <parent link="base_link" />
    <child link="upper_arm" />
    <origin xyz="0 0 0" />
    <axis xyz="0 1 0" />
    <dynamics damping="0.1" />
    <limit lower="-pi" upper="pi" />
  </joint>

  <joint name="elbow" type="revolute">
    <parent link="upper_arm" />
    <child link="lower_arm" />
    <origin xyz="0 0 -1" />
    <axis xyz="0 1 0" />
    <dynamics damping="0.1" />
    <limit lower="-pi/2" upper="pi/2" />
  </joint>

  <joint name="wrist" type="fixed">
    <parent link="lower_arm" />
    <child link="hand" />
    <origin xyz="0 0 -1.1" />
  </joint>

  <transmission type="SimpleTransmission" name="shoulder_trans">
    <actuator name="shoulder_torque" />
    <joint name="shoulder" />
    <mechanicalReduction>1</mechanicalReduction>
  </transmission>

  <transmission type="SimpleTransmission" name="elbow_trans">
    <actuator name="elbow_torque" />
    <joint name="elbow" />
    <mechanicalReduction>1</mechanicalReduction>
  </transmission>

  
  <frame name="hand_center" link="hand" xyz="0 0 0" rpy="0 0 0" />
</robot>